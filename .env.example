# ==============================================
# RAVEN UGC PLATFORM - ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to Git!
# ==============================================

# ==============================================
# N8N CONFIGURATION
# ==============================================
# Your self-hosted n8n instance URL (no trailing slash)
N8N_API_URL=https://n8n.your-domain.com

# n8n API Key (Settings -> API -> Create Key)
N8N_API_KEY=your-n8n-api-key-here

# Webhook secret for securing n8n webhooks (generate a random 32-char string)
# Used in X-API-Key header when calling n8n webhooks
N8N_WEBHOOK_SECRET=generate-random-32-char-string

# ==============================================
# SUPABASE CONFIGURATION
# ==============================================
# Get these from: Supabase Dashboard -> Settings -> API

# Project URL
SUPABASE_URL=https://xxxxx.supabase.co

# Anonymous/Public key (safe for frontend)
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Service Role key (BACKEND ONLY - has full database access, bypasses RLS)
# NEVER expose this in frontend code!
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ==============================================
# AI API KEYS
# ==============================================
# Key AI - Unified API for Veo 3.1, Nano Banana, Sora 2
# Get from: https://key-ai.com (or your Key AI provider)
KEY_AI_API_KEY=your-key-ai-api-key

# OpenAI - GPT-4 mini for prompt generation
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-key

# ==============================================
# GITHUB (FOR VERSION CONTROL)
# ==============================================
# Personal Access Token with repo permissions
# Create at: https://github.com/settings/tokens
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_your-github-token

# ==============================================
# FRONTEND CONFIGURATION (PHASE 2)
# ==============================================
# These are exposed to the browser (NEXT_PUBLIC_ prefix)

# Supabase (public keys only)
NEXT_PUBLIC_SUPABASE_URL=${SUPABASE_URL}
NEXT_PUBLIC_SUPABASE_ANON_KEY=${SUPABASE_ANON_KEY}

# n8n Webhook endpoint
NEXT_PUBLIC_N8N_WEBHOOK_URL=${N8N_API_URL}/webhook/ugc-video-generate
NEXT_PUBLIC_N8N_WEBHOOK_KEY=${N8N_WEBHOOK_SECRET}

# ==============================================
# OPTIONAL CONFIGURATION
# ==============================================
# Cloudflare R2 (Phase 2 - video storage)
# R2_ACCOUNT_ID=your-cloudflare-account-id
# R2_ACCESS_KEY_ID=your-r2-access-key
# R2_SECRET_ACCESS_KEY=your-r2-secret-key
# R2_BUCKET_NAME=raven-ugc-videos

# Stripe (Phase 2 - payments)
# STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
